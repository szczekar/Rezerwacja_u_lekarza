// w tablicy data przechowujemy specjalizacje
var data = [
	"chirurg",
	"dermatolog",
	"stomatolog",
	"urolog",
	"ginekolog",
	"laryngolog"
];

// jesli DOM jest zaladowany to mozna wykonac funkcje autocomplete (jquery)
$(document).ready(
	function() {
		$("#specjalizacja").autocomplete({
			source: data,
			autoFocus: true,
			minLength: 2,
		});
	}
);

// wyswietlenie wszystkich specjalizacji po kliknieciu
$(function() {

	$('#specjalizacja').autocomplete({
		minLength: 0
	});
	$('#specjalizacja').click(function() {
		$(this).autocomplete("search", "");
	});
});